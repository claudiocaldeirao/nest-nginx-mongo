FROM mongo:7.0.2

ARG MONGO_INITDB_ROOT_USERNAME=root
ARG MONGO_INITDB_ROOT_PASSWORD=root
ARG MONGO_INITDB_DATABASE=development

ENV MONGO_INITDB_ROOT_USERNAME=$MONGO_INITDB_ROOT_USERNAME
ENV MONGO_INITDB_ROOT_PASSWORD=$MONGO_INITDB_ROOT_PASSWORD
ENV MONGO_INITDB_DATABASE=$MONGO_INITDB_DATABASE

COPY posts.json /tmp/posts.json
COPY importscript.sh /docker-entrypoint-initdb.d/

ADD init-mongo.js /docker-entrypoint-initdb.d/
